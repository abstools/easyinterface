#!/bin/bash

HOME2="/home/aeflores";
LLVM2KITTEL_DIR="$HOME2/Systems/llvm2kittel";
KOAT2COFLOCO_DIR="$HOME2/Systems/cofloco/interfaces/C2ces";
COFLOCO_DIR="$HOME2/Systems/cofloco";


echo "<eiout>"
echo "<eicommands>"
echo "<printonconsole>"
echo "<content format='text'>"
#echo "$*"
   

File=$1;
shift
Cost_model="";


if [[ ("$#" -ge "1") && ("$1" == "-tick_cost")]]
   then
   Cost_model="tick_cost"
   shift
fi


clang -c  $File -emit-llvm -o $File.o 2> $File.error

cat $File.error
$LLVM2KITTEL_DIR/llvm2kittel $File.o -complexity-tuples -division-constraint exact >$File.koat 

$KOAT2COFLOCO_DIR/koat2cfg.pl $File.koat $Cost_model 
$KOAT2COFLOCO_DIR/cfg2ces.pl $File.koat.cfg  

timeout 180s $COFLOCO_DIR/cofloco -i $File.koat.cfg.ces  $* | sed 's/</\&lt;/' | sed 's/>/\&gt;/'

echo "</content>"
echo "</printonconsole>"
echo "</eicommands>"
echo "</eiout>"
